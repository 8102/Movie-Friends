<div class="login-page">
  <div class="form">
    <form class="register-form" action="/registration" method="POST">
      <input type="text" name="username" placeholder="username" required/>
      <input type="checkbox" name="publicFirst"/> My First Name can be public<br>
      <input type="text" name="firstName" placeholder="first name" required/>
      <input type="checkbox" name="publicLast"/> My Last Name can be public<br>
      <input type="text" name="lastName" placeholder="last name" required/>
      <input type="checkbox" name="publicGender"/> My Gender can be public<br>
      <select name="gender">
        <option value="f">Miss</option>
        <option value="m">Mister</option>
      </select>
      <input type="password" name="password" placeholder="password" required/>
      <input type="password" name="passwordVerif" placeholder="confirm password" required/>
      <button>create</button>
      <p class="message">Already registered ? <a href="/login">Sign In</a></p>
    </form>
  </div>
</div>

<link rel="stylesheet" type="text/css" href="/css/login.css">
