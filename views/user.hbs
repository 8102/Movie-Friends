<section>
  <div>
    <div>
      <h3>
        Username:
      </h3>
      <p >
        {{user.username}}
      </p>
      {{#if user.canSee}}
        <h3>
          First Name:
        </h3>
        <p >
          {{user.firstName}}
        </p>
        <h3>
          Last Name:
        </h3>
        <p >
          {{user.lastName}}
        </p>
        <h3>
          Gender:
        </h3>
        <p >
          {{#if user.male}}
            Mister
          {{else}}
            Miss
          {{/if}}
        </p>
      {{/if}}
    </div>
    <h3>
      Movies
    </h3>
    <table id="table" class="table table-hover table-mc-light-blue">
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Rated</th>
          <th>Link</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        {{#each ratings}}
          <tr>
            <td data-title="ID">{{this.movieId}}</td>
            <td data-title="Title">{{this.title}}</td>
            <td data-title="Title">{{this.rating}}</td>
            <td data-title="Link">
              <a href="/movies/{{this.movieId}}">link</a>
            </td>
            <td data-title="Delete">
              {{#if ../same}}
                <form action="/delMovie" method="POST">
                  <input type="hidden" name="id" value="{{this.movieId}}"/>
                  <button class="button" type="submit">
                    REMOVE
                  </button>
                </form>
              {{/if}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>

<link rel="stylesheet" type="text/css" href="/css/user.css">
